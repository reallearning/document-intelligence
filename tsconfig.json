{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next.config.mjs", "src/app/(demo-dashboard)/(root)/accounts-receivable/compliance/active-invoice", "src/app/(demo-dashboard)/finance-control-center/page.tsx", "src/app/(demo-dashboard)/risk-and-compliance/page.jsx", "src/app/(demo-dashboard)/business-intelligence/page.jsx", "src/app/(demo-dashboard)/contracts/detail/page.jsx"],
  "exclude": ["node_modules"]
}
